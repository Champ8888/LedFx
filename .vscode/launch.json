{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LedFx",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ledfx/__main__.py",
            "console": "integratedTerminal",
            "pythonArgs": ["-Xfrozen_modules=off"],
            "subProcess": true,
            "justMyCode": false,
            "env":{"PYDEVD_DISABLE_FILE_VALIDATION": "1"},
            "windows": {
                "program": "${workspaceFolder}\\ledfx\\__main__.py"
            },
            "presentation": {
                "group": "Sentry Enabled",
                "order": 1
            }
        },
        {
            "name": "LedFx (Verbose Logging)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ledfx/__main__.py",
            "args": ["-vv"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonArgs": ["-Xfrozen_modules=off"],
            "subProcess": true,
            "env":{"PYDEVD_DISABLE_FILE_VALIDATION": "1"},
            "windows": {
                "program": "${workspaceFolder}\\ledfx\\__main__.py"
            },
            "presentation": {
                "group": "Sentry Enabled",
                "order": 2
            }
        },
        {
            "name": "LedFx (Verbose Logging, No Sentry)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ledfx/__main__.py",
            "args": ["-vv", "--offline"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonArgs": ["-Xfrozen_modules=off"],
            "subProcess": true,
            "env":{"PYDEVD_DISABLE_FILE_VALIDATION": "1"},
            "windows": {
                "program": "${workspaceFolder}\\ledfx\\__main__.py"
            },
            "presentation": {
                "group": "Sentry Disabled",
                "order": 2
            }
        },
        {
            "name": "LedFx (No Sentry)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ledfx/__main__.py",
            "args": ["--offline"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "pythonArgs": ["-Xfrozen_modules=off"],
            "subProcess": true,
            "env":{"PYDEVD_DISABLE_FILE_VALIDATION": "1"},
            "windows": {
                "program": "${workspaceFolder}\\ledfx\\__main__.py"
            },
            "presentation": {
                "group": "Sentry Disabled",
                "order": 1
            }
        },
    ]
}